{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "pretty": true,
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "plugins": [
      { "name": "ts-import-ext-plugin" }
    ]
  }
}
