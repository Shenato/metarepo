import React from 'react'
import TestRenderer from 'react-test-renderer'
import test from 'blue-tape'
import { component, mapDefaultProps, startWithType } from '../src'

test('mapDefaultProps', async (t) => {
  const MyComp = component(
    startWithType<{ foo?: string }>(),
    mapDefaultProps({
      bar: 'bar',
      foo: 'foo',
    })
  )('Name', (props) => <span {...props}/>)

  const testRenderer = TestRenderer.create(<MyComp/>)
  const props = testRenderer.root.findByType('span').props

  t.deepEquals(
    props,
    {
      foo: 'foo',
      bar: 'bar',
    },
    'should pass props'
  )
})
